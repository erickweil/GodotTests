{
	"version": "0.2.0",
	"configurations": [
	  // For these launch configurations to work, you need to setup a GODOT4
	  // environment variable. On mac or linux, this can be done by adding
	  // the following to your .zshrc, .bashrc, or .bash_profile file:
	  // export GODOT4="/Applications/Godot.app/Contents/MacOS/Godot"
	  {
		"name": "ðŸ•¹ Debug Game",
		"type": "coreclr",
		"request": "launch",
		"preLaunchTask": "build",
		"program": "${env:GODOT4}",
		"args": [],
		"cwd": "${workspaceFolder}",
		"stopAtEntry": false,
	  },
	  // Debug the scene that matches the name of the currently open *.cs file
	  // (if there's a scene with the same name in the same directory).
	  {
		"name": "ðŸŽ­ Debug Current Scene",
		"type": "coreclr",
		"request": "launch",
		"preLaunchTask": "build",
		"program": "${env:GODOT4}",
		"args": [
		  "${fileDirname}/${fileBasenameNoExtension}.tscn"
		],
		"cwd": "${workspaceFolder}",
		"stopAtEntry": false,
	  },
	  {
		"name": "ðŸ§ª Debug Tests",
		"type": "coreclr",
		"request": "launch",
		"preLaunchTask": "build",
		"program": "${env:GODOT4}",
		"args": [
		  // These command line flags are used by GoDotTest to run tests.
		  "--run-tests",
		  "--quit-on-finish"
		],
		"cwd": "${workspaceFolder}",
		"stopAtEntry": false,
	  },
	  {
		"name": "ðŸ”¬ Debug Current Test",
		"type": "coreclr",
		"request": "launch",
		"preLaunchTask": "build",
		"program": "${env:GODOT4}",
		"args": [
		  // These command line flags are used by GoDotTest to run tests.
		  "--run-tests=${fileBasenameNoExtension}",
		  "--quit-on-finish"
		],
		"cwd": "${workspaceFolder}",
		"stopAtEntry": false,
	  },
	]
  }